{
  "name": "react-lunr",
  "version": "0.5.0",
  "description": "React component to search a Lunr index",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "build:watch": "npm run build -- --watch",
    "format": "prettier --write 'src/**/*.js' 'rollup.config.js' 'README.md'",
    "prebuild": "rimraf dist",
    "prepublish": "npm run build",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "homepage": "https://github.com/angeloashmore/react-lunr",
  "repository": {
    "type": "git",
    "url": "https://github.com/angeloashmore/react-lunr.git"
  },
  "keywords": [
    "react",
    "component",
    "search",
    "lunr"
  ],
  "author": "Angelo Ashmore",
  "license": "MIT",
  "dependencies": {
    "lunr": "^2.3.5",
    "memoize-one": "^5.0.0",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-testing-library": "^5.8.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "4.3.2"
  },
  "peerDependencies": {
    "react": ">=16"
  }
}
